{% block form %}
    {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
        {{ form_errors(form) }}

        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.code) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.name) }}
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.price) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.brand) }}
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.category) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.description) }}
            </div>
        </div>

        <div class="well well-sm">
            <button type="submit" class="btn btn-primary">Guardar Producto</button>
            <a class="btn btn-default" href="{{ path('product_list') }}" role="button">Listado de Productos</a>
        </div>

    {{ form_end(form) }}
{% endblock %}